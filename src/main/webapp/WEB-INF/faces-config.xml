<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
        
    <application>
    	<!-- Inclui o arquivo de configuração de mensagens -->
    	<message-bundle>org.coursera.eujali.Messages</message-bundle>
    	
    	<!-- Para mensagens serem exibidas em português brasil (Idioma Padrão) -->
    	<locale-config>
    		<default-locale>pt_BR</default-locale>
    	</locale-config>
    </application>
    
    <!--  definir fábridcade JSFExceptionHandler -->
    <factory>
    	<exception-handler-factory>
    		org.coursera.eujali.util.jsf.JsfExceptionHandlerFactory
    	</exception-handler-factory>
    </factory>

</faces-config>